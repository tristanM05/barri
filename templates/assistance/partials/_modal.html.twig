<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel"
    aria-hidden="true" id="modalContact">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title title" id="exampleModalLabel">Contactez nous !</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center" style="width:100%">
                    {{message}}
                </div>
                {% endfor %}
                {{form_start(form)}}
                {{form_row(form.message)}}
                {{form_row(form.attachment)}}
                <div>
                    <p id="pAssist">*Vous receverez une copie de ce message dans votre boite mail</p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn action_button btn-block mt-2" id="btnContact">Envoyer</button>
                </div>
                {{form_end(form)}}

            </div>
        </div>
    </div>
</div>