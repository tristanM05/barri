{% extends "User/base_user.html.twig" %}

{% block title %}Page de paiement{% endblock %}

{% block body %}
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
                <h1 class="text_green">Je paye mon abonnement</h1>
                <div class="table_title">
            </div>

            <section class="price justify-content-center">
                    <div class="table mr-5 border-dark">
                        <div class="table_text border-dark">
                            <h3 class="text_green">Basique</h3>
                        </div>
                        <div class="table_price border-dark action_button active_subscription">
                            <p><span>0€</span>/Mois</p>
                        </div>
                        <div>
                            <ul class="table_item" style="min-height: 161px">
                                <li class="table_list_item border-dark">Accès au site en lecture</li>
                            </ul>
                            <button type="button" class="table_button active_subscription">Abonnement actif</button>
                        </div>
                    </div>

                    <div class="table border-dark">
                        <div class="table_text border-dark">
                            <h3 class="text_green">Premium</h3>
                        </div>

                        <div class="table_price border-dark">
                            <p><span>19.99€</span>/Mois</p>
                        </div>

                        <div>
                            <ul class="table_item">
                                <li class="table_list_item border_premium_1">Créations et modifications des articles</li>
                                <li class="table_list_item border_premium_2">Ventes des articles</li>
                                <li class="table_list_item border_premium_3">Page de gestion</li>
                            </ul>
                            <button type="button" class="table_button" data-toggle="modal" data-target="#modalSubscription">Je paye</button>
                        </div>
                    </div>
            </section>
            <div class="col-12">
                <h4 class="text-dark">Contactez-nous à ce numéro pour les modalités de paiement : <strong>02 46 65 09 40</strong></h4>
            </div>
        </div>
            {# </div> #}
        </div>

        {% include "User/subscription/_modal_subscription.html.twig" %}
    </div>
    
{% endblock %}